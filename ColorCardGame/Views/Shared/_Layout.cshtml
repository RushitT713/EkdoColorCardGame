<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Color Card Game</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/animation.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="nav-content">
                <div class="logo">
                    <a asp-controller="Home" asp-action="Index">
                        <span style="font-size: 2rem;">🎨</span>
                        <span style="font-weight: 700; margin-left: 0.5rem;">Color Card</span>
                    </a>
                </div>
                <div class="nav-links">
                    <ul>
                        <li>
                            <a asp-controller="Lobby" asp-action="Index">
                                <i class="fas fa-home"></i> Lobby
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Stats" asp-action="Index">
                                <i class="fas fa-chart-line"></i> Stats
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>